<Application x:Class="Birzha.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Birzha"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="BlockCommon">
            <Setter Property="ItemsControl.FontFamily" Value="Times New Roman"/>
            <Setter Property="ItemsControl.FontSize" Value="16"/>
        </Style>
        <Style x:Key="ColorAccent">
            <Setter Property="ItemsControl.BorderBrush" Value="Orange"/>
            <Setter Property="ItemsControl.BorderThickness" Value="2"/>
            <Setter Property="ItemsControl.Margin" Value="10,0,0,10"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="ItemsControl.Background" Value="LightCoral"/>
            <Setter Property="ItemsControl.Margin" Value="5"/>
        </Style>
        <Style x:Key="Captcha">
            <Setter Property="ItemsControl.FontSize" Value="16"/>
            <Setter Property="ItemsControl.FontStyle" Value="Oblique"/>
        </Style>
    </Application.Resources>
</Application>
